{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}


{% block main %}
    <h1>All books</h1>
    <nav class="secondary-nav">
        <ul>
            <li class="nav-item"><a class="nav-b" href="{{ path('library') }}">Library home</a></li>
            <li class="nav-item"><a class="nav-b" href="{{ path('library_view_all') }}">All books</a></li>
            <li class="nav-item"><a class="nav-b" href="{{ path('library_show_all') }}">All books (json)</a></li>
            <li class="nav-item"><a class="nav-b" href="{{ path('library_create_new') }}">Create new book</a></li>
        </ul>
    </nav>
    <br>


    <table class="book-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Isbn</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td class="book-td">{{ book.id }}</td>
                    <td class="book-td">{{ book.title }}</td>
                    <td class="book-td">{{ book.author }}</td>
                    <td class="book-td">{{ book.isbn }}</td>
                    <td class="book-td">
                        {% if book.image %}
                            <img src="{{ book.image }}" alt="{{ book.title }}" style="max-width: 70px;">
                        {% else %}
                            No image available
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}
