{% extends "base.html.twig" %}

{% block title %}Pig Game{% endblock %}

{% block main %}
<ul>
    <li><a href="{{ path('card_start') }}">Landing page</li></a>
    <li><a href="{{ path('card_deck') }}">Show Deck</li></a>
    <li><a href="{{ path('card_shuffle') }}">Shuffle Deck</li></a>
    <li><a href="{{ path('card_draw') }}">Draw Card</li></a>
    <li><a href="{{ path('card_draw:number_start') }}">Draw :number cards</li></a>
</ul>

<h1>Draw :number cards</h1>
<p>Choose how many cards to draw. </p>

<form method="post" action="{{ path('card_draw:number_init') }}">
    <input type="number" name="num_cards" min="1">
    <input type="submit" name="do_it" value="Draw Cards">
</form>

{% endblock %}
