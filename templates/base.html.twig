<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="site-header" style="background-image: url({{ asset('img/background.jpg') }})">
            <span class="site-title">My Symfony Site</span>
            <nav class="main-nav">
                <ul>
                    <li class="nav-li"><a class="nav-a" href="{{ path('home') }}">Home</a></li>
                    <li class="nav-li"><a class="nav-a" href="{{ path('about') }}">About</a></li>
                    <li class="nav-li"><a class="nav-a" href="{{ path('report') }}">Report</a></li>
                    <li class="nav-li"><a class="nav-a" href="{{ path('lucky') }}">Lucky</a></li>
                    <li class="nav-li"><a class="nav-a" href="{{ path('card_start') }}">Card Game</a></li>
                    <li class="nav-li"><a class="nav-a" href="{{ path('api_home') }}">Api</a></li><br>
                </ul>
            </nav>
        </header>
        <main>
            {% block main %}{% endblock %}
        </main>
    </body>
    <footer>
        <p>Author: Axel JÃ¶nsson</p>
            {% block footer %}{% endblock %}
    </footer>
</html>
